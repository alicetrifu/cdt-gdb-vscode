{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2015",
        "outDir": "out",
        "lib": [
            "es2015",
            "dom"
        ],
        "jsx": "react",
        "strict": true,
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "preserveWatchOutput": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "**/client/*"
    ]
}